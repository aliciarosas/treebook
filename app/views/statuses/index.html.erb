<div class="page-header">
	<h1>All of the Statuses</h1>
</div>

<div class="new-status">
	<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
</div>

<% @statuses.each do |status| %>
<div class="status">
	<div class="row">
		<div class="span1">
			<%= image_tag status.user.gravatar_url %>
		</div>
		<div class="span7">
			<strong><%= status.user.full_name %></strong>
			<p><%= status.content %></p>
			<div class="meta">
				<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
				<% unless current_user.nil? %>
					<% if current_user.id == status.user_id %>
						<span class="admin">
							| <%= link_to "Edit", edit_status_path(status) %> |
							<%= link_to "Delete", status, method: :delete, data: {confirm: 
								"Are you sure you want to delete this status?"} %>
						</span>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<% end %>


